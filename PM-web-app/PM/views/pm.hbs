<!DOCTYPE html>
<html>

<head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='css/bootstrap.css' />
</head>

<body class="container">
    <h1>PM-app</h1>
    <hr/>
    <div class="panel panel-default">
        <div class="panel-heading">All Products </div>
        <div class="panel-body">
             <table class="table table-bordered">   
             {{#each products}}
                <tr>
                    <td>{{name}}</td>
                    <td>&#8377;{{price}}</td>
                    <td>{{makeDate}}</td>
                     <td><a href="products/edit/{{_id}}"><span class="glyphicon glyphicon-edit"></span></a></td>
                    <td><a href="products/delete/{{_id}}"><span class="glyphicon glyphicon-trash"></span></a></td>
                </tr>
             {{/each}}
             </table>
             <hr/>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
        <div class="panel-heading"> Product Form </div>
        <div class="panel-body">
            <form action="products/save" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input name="name" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input name="price" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Make_Date</label>
                    <input name="makeDate" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea name="description" class="form-control"></textarea>
                </div>
                <button class="btn btn-danger">Save</button>
            </form>
        </div>
    </div>
    </div>
</body>

</html>